<div id="wizard">
  <div id="wizard-categories" class="container-default c-1200" data-controller="category-selector">
    <h2  data-aos="fade-up" data-aos-duration="750">Which of these categories would best describe your Art ?</h2>

    <%= link_to "Back", :back, class: "btn-default btn-gold bottom-left max-content" %>

    <%= form_for @art, method: :put, url: wizard_path do |f| %>
      <%= f.hidden_field :category_id, data: { "category-selector-target": "field" } %>
      <%= f.submit "next", class: "btn-default btn-gold bottom-right max-content btn-disabled", disabled: true, data: { "category-selector-target": "button" } %>
    <% end %>

    <div class="category-cards" data-aos="fade-up" data-aos-duration="750">
      <% Category.order(:name).each do |category| %>
        <%= tag.div class:"category-card", style:"background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('#{ cl_image_path category.photo.key }');", data: { name: category.name, "category-selector-target": "category", action: "click->category-selector#fillField", aos: "fade-up", "aos-duration": "750", "aos-delay": "200" } do %>
          <span><%= category.name %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
