<div class="container-default c-1200 wizard-form">
  <div class="categories" data-aos="fade-up" data-aos-duration="750" data-controller="category-selector">
    <h2>Choose by category</h2>
    <%= form_for @art, method: :put, url: wizard_path, data: { "category-selector-target": "form" }  do |f| %>
      <%= f.hidden_field :category_id, data: { "category-selector-target": "field" } %>
    <% end %>

    <div class="category-cards">
      <% Category.all.each do |category| %>
        <%= tag.div class:"category-card", style:"background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('#{ cl_image_path category.photo.key }');", data: { name: category.name, action: "click->category-selector#fillField", aos: "fade-up", "aos-duration": "750" } do %>
          <span><%= category.name %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
