<div class="wizard-form">
  <%= form_for @art, method: :put, url: wizard_path do |f| %>
    <% if f.object.errors.any? %>
      <div class="error_messages">
        <% f.object.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
      </div>
    <% end %>
    <h1>Let's start with a title and description</h1>

    <div data-controller="photo-uploader">
      <div class="photos">
        <%= f.label :photos %>
        <%= f.file_field :photos, :multiple => true, :data => {:action => "photo-uploader#addFile"} %>
      </div>

      <div data-photo-uploader-target="files"></div>
    </div>

    <div class="art-submit">
      <%= f.submit 'Submit', class:"btn-gold btn-wizard"%>
    </div>
  <% end %>
</div>
