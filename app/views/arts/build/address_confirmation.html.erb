<div class="wizard-form">
  <%= form_for @art, method: :put, url: wizard_path do |f| %>
    <% if f.object.errors.any? %>
      <div class="error_messages">
        <% f.object.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
      </div>
    <% end %>
    <h1>Where is the art currently?</h1>

    <div class="art-form-text">
      <%= f.label :location %>
      <div data-controller="address-autocomplete", data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
        <%= f.hidden_field :location, data: {address_autocomplete_target: "address"} %>
      </div>
    </div>

    <div class="art-submit">
      <%= f.submit 'next', class:"btn-gold btn-wizard" %>
    </div>
  <% end %>
</div>
