<div id="wizard">
  <div id="wizard-location" class="container-default c-600">
    <%= link_to "Back", "/arts/#{ @art.id }/build/category", class: "btn-default btn-gold max-content bottom-left" %>

    <h2>Where is your art located ?</h2>

    <%= form_for @art, method: :put, url: wizard_path do |f| %>
      <div class="error-messages">
        <% if f.object.errors.any? %>
          <% f.object.errors.full_messages.each do |error| %>
            <p class="text-red"><%= error %></p>
          <% end %>
        <% end %>
      </div>

      <div class="address" data-controller="address-autocomplete", data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>"     data-address-autocomplete-show-value="true">
        <%= f.hidden_field :location, data: { address_autocomplete_target: "address", "update-map-target": "field" } %>

        <div style="width: 100%; height: 800px; transform: scale(1.1); margin-top: -30px; border-radius: 20px; z-index: -10;"
          data-controller="map"
          data-map-lat-value="50.66829"
          data-map-lng-value="4.61443"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-address-autocomplete-target="map"></div>
      </div>

      <%= f.submit 'Next', class:"btn-default btn-gold max-content bottom-right" %>
    <% end %>

    <ul class="pagination">
      <li class="page"></li>
      <li class="page active"></li>
      <li class="page"></li>
      <li class="page"></li>
      <li class="page"></li>
    </ul>
  </div>
</div>
