<div data-controller="hide-devise-alert" data-hide-devise-alert-target="alert">

  <% if notice %>
    <div class="alert-container">
      <span>✔︎</span>
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert-container">
      <span>⚠︎</span>
      <%= alert %>
    </div>
  <% end %>

</div>
