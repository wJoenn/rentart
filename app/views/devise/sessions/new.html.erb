<div id="sessions-new" class="container-1200">
  <h2>Log in</h2>

  <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), data: { turbo: false }, id: "sessions__form" do |f|  %>
    <h3>Log in</h3>

    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email%>
    </div>

    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password%>
    </div>

    <%= f.submit "Confirm", class: "btn-default btn-airbnb" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

