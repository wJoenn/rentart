<div id="registrations-edit" class="container-1200">
  <h2>Edit your account</h2>

  <%= render "form", title: "Update account", edit: true %>

  <div>
    <h3>Delete your account</h3>
    <div class="delete">
      <p>Click the following link if you want to delete your account</p>
      <%= link_to "Delete", registration_path(resource_name), class: "btn-default btn-airbnb", method: :delete %>
    </div>
  </div>

  <%= link_to "Back", :back %>
</div>

