<div class="arts-index">

  <div class="container-default category-container">

    <div class="category-btn category-left-btn">
      <i class="fa-solid fa-arrow-left category-circle"></i>
    </div>

      <% @categories.each do |c| %>
        <%= link_to category_path(c), class:"category-card", style:"background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('#{ cl_image_path c.photo.key }');" do %>
          <p class="category-card-text"><%= c.name %></p>
        <% end %>
      <% end %>

    <div class="category-btn category-right-btn">
      <i class="fa-solid fa-arrow-right category-circle"></i>
    </div>

  </div>



  <div class="arts-container container-default">

    <% @category.arts.each do |art| %>
      <%= link_to art_path(art), class: "art-card" do %>

        <div class="art-card-img" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('<%= cl_image_path art.photos.first.key %>');">

          <div class="favorites-location-div">
            <i class="fa-solid fa-heart favorites-gold"></i>
          </div>

        </div>

        <div class="art-card-body">

          <h5 class="art-card-title"><%= art.title %></h5>
          <div>
            <p class="art-card-text"><%= art.description %></p>
            <p class="art_card-price">â‚¬ <%= art.price.round(2) %> per day</p>
          </div>

        </div>

      <% end %>
    <% end %>

  </div>
</div>
